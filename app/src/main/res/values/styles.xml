<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Style for a category of vocabulary words -->
    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Style for image view in list item layout -->
    <style name="ImageViewStyle">
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">@dimen/list_item_height</item>
        <item name="android:background">@color/tan_background</item>
    </style>

    <!-- Style for linear layout container -->
    <style name="TextViewGroupStyle">
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/view_group_padding_left</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_toRightOf">@id/image_view</item>
    </style>

    <!-- Style for miwok word text view -->
    <style name="MiwokTranslationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/translation_text_view_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for default word text view -->
    <style name="DefaultTranslationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/translation_text_view_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for play icon in list item layout -->
    <style name="PlayIconStyle">
        <item name="android:layout_width">@dimen/play_icon_width_and_height</item>
        <item name="android:layout_height">@dimen/play_icon_width_and_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/play_icon_right_margin</item>
    </style>

</resources>
